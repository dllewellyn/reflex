{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vertex AI Batch Input",
  "description": "Input format for Vertex AI Batch Prediction",
  "type": "object",
  "properties": {
    "request": {
      "type": "object",
      "properties": {
        "contents": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "role": {
                "type": "string",
                "const": "user"
              },
              "parts": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "text": {
                      "type": "string",
                      "description": "The prompt including system instructions and conversation transcript"
                    }
                  },
                  "required": ["text"]
                }
              }
            },
            "required": ["role", "parts"]
          }
        },
        "generationConfig": {
          "type": "object",
          "properties": {
            "temperature": {
              "type": "number",
              "default": 0.0
            },
            "maxOutputTokens": {
              "type": "integer",
              "default": 1024
            }
          }
        }
      },
      "required": ["contents"]
    }
  },
  "required": ["request"]
}
